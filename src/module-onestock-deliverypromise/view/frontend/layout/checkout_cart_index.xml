<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <referenceBlock name="checkout.cart.shipping">
        <arguments>
            <argument name="jsLayout" xsi:type="array">
                <item name="components" xsi:type="array">
                    <item name="block-summary" xsi:type="array">
                        <item name="children" xsi:type="array">
                            <item name="block-rates" xsi:type="array">
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Smile_OnestockDeliveryPromise/checkout/shipping-rates-with-promise.html</item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="delivery-date" xsi:type="array">
                                        <item name="component" xsi:type="string">Smile_OnestockDeliveryPromise/js/cart/delivery-date</item>
                                        <item name="displayArea" xsi:type="string">delivery-date</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Smile_OnestockDeliveryPromise/cart/delivery-date.html</item>
                                        </item>
                                    </item>
                                    <item name="deadline-date" xsi:type="array">
                                        <item name="component" xsi:type="string">Smile_OnestockDeliveryPromise/js/cart/deadline-date</item>
                                        <item name="displayArea" xsi:type="string">deadline-date</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Smile_OnestockDeliveryPromise/cart/deadline-date.html</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </arguments>
    </referenceBlock>
</page>
